{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "lib": ["es2022", "DOM", "DOM.Iterable"],
        "types": ["node", "jest", "@testing-library/jest-dom"],
        "jsx": "react",
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": false,
        "noImplicitAny": true
    },
    "include": ["./scripts", "./packages/*/src"],
    "exclude": [
        "node_modules",
        "./packages/*/esm/**/*",
        "./packages/*/cjs/**/*",
        "./packages/*/lib/**/*"
    ]
}
