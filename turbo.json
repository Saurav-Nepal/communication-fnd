{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "lib/**",
                "esm/**",
                "cjs/**",
                "!.next/cache/**"
            ],
            "cache": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^build"],
            "persistent": true
        }
    }
}
