{
    "extends": "tsconfig/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@Constants/*": ["src/Constants/*"],
            "@Components/*": ["src/Components/*"],
            "@Utils/*": ["src/Utils/*"],
            "@Modules/*": ["src/Modules/*"],
            "@Hooks/*": ["src/Hooks/*"],
            "@Themes/*": ["src/Themes/*"],
            "@Types/*": ["src/Types/*"],
            "@MainThemes/*": ["../../Themes/*"]
        },
        "isolatedModules": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
