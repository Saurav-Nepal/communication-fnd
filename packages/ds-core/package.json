{
    "name": "@slabs/ds-core",
    "version": "0.0.0",
    "description": "Slabs Design System Core",
    "license": "MIT",
    "keywords": [
        "react",
        "ui"
    ],
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "main": "./cjs/index.cjs",
    "module": "./esm/index.mjs",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/index.d.mts",
                "default": "./esm/index.mjs"
            },
            "require": {
                "types": "./lib/index.d.ts",
                "default": "./cjs/index.cjs"
            }
        },
        "./src/styles.scss": "./src/styles.scss"
    },
    "scripts": {
        "build": "esno ../../scripts/build ds-core",
        "dev": "nodemon --exec \"esno ../../scripts/build ds-core\""
    },
    "peerDependencies": {
        "react": "^18.3.1"
    },
    "devDependencies": {
        "@slabs/ds-hooks": "*",
        "@slabs/ds-utils": "*",
        "@slabs/eslint-config": "*",
        "@types/color": "^3.0.6",
        "@types/eslint": "^8.44.7",
        "@types/node": "^20.5.2",
        "@types/react": "^18.3.3",
        "@types/react-color": "^2",
        "@types/react-dom": "^18",
        "@types/react-transition-group": "^4",
        "eslint": "^8.56.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "typescript": "5.5.4"
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.0.4",
        "@radix-ui/react-context-menu": "^2.2.1",
        "@radix-ui/react-dialog": "^1.1.1",
        "@radix-ui/react-dropdown-menu": "^2.0.6",
        "@radix-ui/react-hover-card": "^1.0.7",
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-popover": "^1.0.7",
        "@radix-ui/react-scroll-area": "^1.1.0",
        "@radix-ui/react-slider": "^1.2.0",
        "@radix-ui/react-slot": "^1.0.2",
        "class-variance-authority": "^0.7.0",
        "cmdk": "^0.2.1",
        "color": "^4.2.3",
        "input-otp": "^1.2.4",
        "lucide-react": "^0.343.0",
        "react-color": "^2.19.3",
        "react-transition-group": "^4.4.5"
    },
    "nodemonConfig": {
        "ignore": [
            "**/lib/**",
            "**/esm/**",
            "**/cjs/**",
            "**/src/**/*.test.ts"
        ],
        "ext": "*.ts, *.tsx, *.css, *.scss, *.js, *.jsx, *.json",
        "delay": 1500,
        "stdin": false
    }
}
